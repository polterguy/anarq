
/*
 * Returns all topics in system.
 */
.description:Returns count of all topics that exists in the system


/*
 * Connecting to database.
 */
data.connect:[generic|anarq]
   database-type:mysql


   /*
    * Invoking read slot.
    */
   data.read
      database-type:mysql
      table:topics
      columns
         count(*)
            as:count
      limit:long:1


   /*
    * Returning results to caller.
    */
   return-nodes:x:@data.read/*/*
